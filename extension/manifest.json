{
  "name": "GitHub Projects Options",
  "version": "0.0.3",
  "description": "Add options to GitHub Projects",
  "manifest_version": 2,
  "permissions": [
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "vendor/jquery-3.1.1.slim.min.js",
        "vendor/handlebars.runtime.min-4.0.5.js",
        "templates.js",
        "content.js"
      ]
    }
  ]
}
