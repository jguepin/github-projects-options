{
  "name": "GitHub Projects Options",
  "version": "0.0.6",
  "description": "Add options to GitHub Projects",
  "manifest_version": 2,
  "permissions": [
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "https://github.com/*"
      ],
      "css": [
        "modal.css"
      ],
      "js": [
        "vendor/zepto.min.js",
        "vendor/handlebars.runtime.min-4.0.5.js",
        "templates.js",
        "observer.js",
        "modal.js",
        "filters.js",
        "content.js"
      ]
    }
  ]
}
